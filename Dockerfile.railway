# マルチステージビルド: フロントエンドビルド
FROM node:18-alpine AS frontend-builder

WORKDIR /app

# Railwayの環境変数をビルド時に受け取る（ARG）
ARG VITE_OPENAI_API_KEY
ARG VITE_API_URL
ARG VITE_ENVIRONMENT

# 環境変数をENVとして設定（ビルド時に使用可能にする）
ENV VITE_OPENAI_API_KEY=${VITE_OPENAI_API_KEY}
ENV VITE_API_URL=${VITE_API_URL}
ENV VITE_ENVIRONMENT=${VITE_ENVIRONMENT}

# フロントエンドの依存関係をインストール
COPY frontend/package*.json ./
RUN npm ci

# フロントエンドをビルド（環境変数がビルド時に埋め込まれる）
COPY frontend/ .
RUN npm run build

# バックエンドビルドステージ
FROM php:8.2-fpm

# Nginxをインストール（フロントエンド配信用）
RUN apt-get update && apt-get install -y \
    git \
    curl \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    libzip-dev \
    zip \
    unzip \
    libpq-dev \
    nginx \
    gettext-base \
    && docker-php-ext-install pdo pdo_pgsql mbstring exif pcntl bcmath gd zip \
    && rm -rf /var/lib/apt/lists/*

# Composerをインストール
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# 作業ディレクトリを設定
WORKDIR /var/www/html

# ユーザーを作成
RUN useradd -G www-data,root -u 1000 -d /home/dev dev
RUN mkdir -p /home/dev/.composer && \
    chown -R dev:dev /home/dev

# 権限を設定
RUN chown -R dev:dev /var/www/html

# 開発用の設定
RUN echo "memory_limit = 512M" > /usr/local/etc/php/conf.d/memory-limit.ini
RUN echo "upload_max_filesize = 100M" > /usr/local/etc/php/conf.d/upload-max-filesize.ini
RUN echo "post_max_size = 100M" >> /usr/local/etc/php/conf.d/upload-max-filesize.ini

# PHP-FPM設定: ソケットを使用するように設定（ビルド時に修正）
RUN if [ -f /usr/local/etc/php-fpm.d/www.conf ]; then \
    sed -i "s|listen = .*|listen = /var/run/php-fpm.sock|g" /usr/local/etc/php-fpm.d/www.conf || true && \
    sed -i "s|;listen.owner = .*|listen.owner = www-data|g" /usr/local/etc/php-fpm.d/www.conf || true && \
    sed -i "s|;listen.group = .*|listen.group = www-data|g" /usr/local/etc/php-fpm.d/www.conf || true && \
    sed -i "s|;listen.mode = .*|listen.mode = 0660|g" /usr/local/etc/php-fpm.d/www.conf || true && \
    echo "listen.owner = www-data" >> /usr/local/etc/php-fpm.d/www.conf && \
    echo "listen.group = www-data" >> /usr/local/etc/php-fpm.d/www.conf && \
    echo "listen.mode = 0660" >> /usr/local/etc/php-fpm.d/www.conf || true; \
    fi

# バックエンドファイルをコピー
COPY backend/ /var/www/html/

# フロントエンドのビルド成果物をコピー
COPY --from=frontend-builder /app/dist /var/www/html/public/frontend

# Nginx設定ファイルをコピー
COPY nginx.railway.conf /etc/nginx/templates/default.conf.template

# 起動スクリプトを作成
RUN echo '#!/bin/bash' > /usr/local/bin/railway-entrypoint.sh && \
    echo '# set -e を削除（エラーハンドリングを改善）' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '# 最初に既存のPHP-FPMプロセスを確実に停止（php:8.2-fpmイメージのデフォルト起動を停止）' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'echo "Stopping any existing PHP-FPM processes..."' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'killall -9 php-fpm 2>/dev/null || true' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'pkill -9 php-fpm 2>/dev/null || true' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'ps aux | grep "[p]hp-fpm" | awk '"'"'{print $2}'"'"' | xargs -r kill -9 2>/dev/null || true' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'sleep 2' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '# 依存関係をインストール' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'if [ ! -d "vendor" ] || [ -z "$(ls -A vendor)" ]; then' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    echo "Installing Laravel dependencies..."' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    composer install --no-interaction --optimize-autoloader' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'fi' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '# 権限を設定' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'chown -R dev:www-data /var/www/html' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'chmod -R 775 storage bootstrap/cache' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '# storage/logsディレクトリを作成して権限を設定' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'mkdir -p storage/logs' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'chown -R dev:www-data storage/logs' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'chmod -R 775 storage/logs' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '# 環境設定ファイルを作成' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'if [ ! -f ".env" ]; then' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    echo "Creating .env file..."' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    cp .env.example .env 2>/dev/null || echo "APP_KEY=base64:$(openssl rand -base64 32)" > .env' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'fi' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '# Railwayの環境変数OPENAI_API_KEYを.envファイルに書き込む' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'if [ -n "$OPENAI_API_KEY" ]; then' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    echo "Setting OPENAI_API_KEY in .env file..."' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    if grep -q "^OPENAI_API_KEY=" .env 2>/dev/null; then' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '        sed -i "s|^OPENAI_API_KEY=.*|OPENAI_API_KEY=$OPENAI_API_KEY|g" .env' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    else' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '        echo "OPENAI_API_KEY=$OPENAI_API_KEY" >> .env' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    fi' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'else' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    echo "WARNING: OPENAI_API_KEY environment variable is not set"' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'fi' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '# アプリケーションキーを生成' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'if ! grep -q "APP_KEY=base64:" .env; then' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    echo "Generating application key..."' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    php artisan key:generate --no-interaction' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'fi' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '# データベース接続設定（PostgreSQLをデフォルトに）' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'if ! grep -q "DB_CONNECTION" .env; then' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    echo "DB_CONNECTION=pgsql" >> .env' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'fi' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '# データベースのマイグレーションを実行（エラーを無視）' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'echo "Running database migrations..."' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'php artisan migrate --force --no-interaction 2>/dev/null || echo "Migration skipped (database not available)"' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '# Nginx設定でPORT環境変数を置換' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'PORT=${PORT:-8000}' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'envsubst '"'"'$$PORT'"'"' < /etc/nginx/templates/default.conf.template > /etc/nginx/sites-available/default' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '# PHP-FPM設定: ソケットディレクトリを作成' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'mkdir -p /var/run' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'chown www-data:www-data /var/run || true' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '# 再度既存のPHP-FPMプロセスを停止（念のため）' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'killall -9 php-fpm 2>/dev/null || true' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'pkill -9 php-fpm 2>/dev/null || true' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'sleep 2' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '# PHP-FPM設定ファイルを確認・修正（ソケットパスを設定）' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'if [ -f /usr/local/etc/php-fpm.d/www.conf ]; then' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    sed -i "s|^listen = .*|listen = /var/run/php-fpm.sock|g" /usr/local/etc/php-fpm.d/www.conf || true' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    sed -i "s|^;listen.owner = .*|listen.owner = www-data|g" /usr/local/etc/php-fpm.d/www.conf || true' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    sed -i "s|^listen.owner = .*|listen.owner = www-data|g" /usr/local/etc/php-fpm.d/www.conf || true' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    sed -i "s|^;listen.group = .*|listen.group = www-data|g" /usr/local/etc/php-fpm.d/www.conf || true' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    sed -i "s|^listen.group = .*|listen.group = www-data|g" /usr/local/etc/php-fpm.d/www.conf || true' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    sed -i "s|^;listen.mode = .*|listen.mode = 0660|g" /usr/local/etc/php-fpm.d/www.conf || true' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    sed -i "s|^listen.mode = .*|listen.mode = 0660|g" /usr/local/etc/php-fpm.d/www.conf || true' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'fi' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '# PHP-FPMを起動（バックグラウンドで実行）' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'echo "Starting PHP-FPM with socket configuration..."' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '/usr/local/sbin/php-fpm -D -y /usr/local/etc/php-fpm.d/www.conf || php-fpm -D -y /usr/local/etc/php-fpm.d/www.conf || echo "PHP-FPM start attempt completed"' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'sleep 5' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '# PHP-FPMのソケットが作成されているか確認' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'if [ -S /var/run/php-fpm.sock ]; then' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    echo "SUCCESS: PHP-FPM socket created at /var/run/php-fpm.sock"' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    ls -la /var/run/php-fpm.sock' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    chmod 666 /var/run/php-fpm.sock || chmod 660 /var/run/php-fpm.sock || true' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'else' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    echo "ERROR: PHP-FPM socket not found at /var/run/php-fpm.sock"' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    echo "Checking PHP-FPM process..."' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    ps aux | grep php-fpm || true' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    echo "Checking PHP-FPM config..."' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    grep "^listen" /usr/local/etc/php-fpm.d/www.conf || true' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    echo "Attempting to start PHP-FPM again..."' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    /usr/local/sbin/php-fpm -D -y /usr/local/etc/php-fpm.d/www.conf' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    sleep 3' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    if [ -S /var/run/php-fpm.sock ]; then' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '        echo "SUCCESS: PHP-FPM socket created after retry"' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    else' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '        echo "WARNING: PHP-FPM socket still not found"' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    fi' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'fi' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '# Nginxを起動（フォアグラウンドで実行）' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'exec nginx -g "daemon off;"' >> /usr/local/bin/railway-entrypoint.sh && \
    chmod +x /usr/local/bin/railway-entrypoint.sh

# ポートを公開（RailwayのPORT環境変数に対応）
EXPOSE 8000

# デフォルトコマンド
ENTRYPOINT ["/usr/local/bin/railway-entrypoint.sh"]
