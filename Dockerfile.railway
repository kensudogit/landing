# バックエンドビルドステージ
FROM php:8.2-fpm

# Nginxをインストール（フロントエンド配信用）
RUN apt-get update && apt-get install -y \
    git \
    curl \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    libzip-dev \
    zip \
    unzip \
    libpq-dev \
    nginx \
    gettext-base \
    && docker-php-ext-install pdo pdo_pgsql mbstring exif pcntl bcmath gd zip \
    && rm -rf /var/lib/apt/lists/*

# Composerをインストール
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# 作業ディレクトリを設定
WORKDIR /var/www/html

# ユーザーを作成
RUN useradd -G www-data,root -u 1000 -d /home/dev dev
RUN mkdir -p /home/dev/.composer && \
    chown -R dev:dev /home/dev

# 権限を設定
RUN chown -R dev:dev /var/www/html

# 開発用の設定
RUN echo "memory_limit = 512M" > /usr/local/etc/php/conf.d/memory-limit.ini
RUN echo "upload_max_filesize = 100M" > /usr/local/etc/php/conf.d/upload-max-filesize.ini
RUN echo "post_max_size = 100M" >> /usr/local/etc/php/conf.d/upload-max-filesize.ini

# バックエンドファイルをコピー
COPY backend/ /var/www/html/

# フロントエンドのビルド成果物をコピー
COPY --from=frontend-builder /app/dist /var/www/html/public/frontend

# Nginx設定ファイルをコピー
COPY nginx.railway.conf /etc/nginx/templates/default.conf.template

# 起動スクリプトを作成
RUN echo '#!/bin/bash' > /usr/local/bin/railway-entrypoint.sh && \
    echo 'set -e' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '# 依存関係をインストール' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'if [ ! -d "vendor" ] || [ -z "$(ls -A vendor)" ]; then' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    echo "Installing Laravel dependencies..."' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    composer install --no-interaction --optimize-autoloader' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'fi' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '# 権限を設定' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'chown -R dev:www-data /var/www/html' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'chmod -R 775 storage bootstrap/cache' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '# 環境設定ファイルを作成' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'if [ ! -f ".env" ]; then' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    echo "Creating .env file..."' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    cp .env.example .env 2>/dev/null || echo "APP_KEY=base64:$(openssl rand -base64 32)" > .env' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'fi' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '# アプリケーションキーを生成' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'if ! grep -q "APP_KEY=base64:" .env; then' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    echo "Generating application key..."' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    php artisan key:generate --no-interaction' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'fi' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '# データベース接続設定（PostgreSQLをデフォルトに）' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'if ! grep -q "DB_CONNECTION" .env; then' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    echo "DB_CONNECTION=pgsql" >> .env' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'fi' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '# データベースのマイグレーションを実行（エラーを無視）' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'echo "Running database migrations..."' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'php artisan migrate --force --no-interaction 2>/dev/null || echo "Migration skipped (database not available)"' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '# Nginx設定でPORT環境変数を置換' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'PORT=${PORT:-8000}' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'envsubst '"'"'$$PORT'"'"' < /etc/nginx/templates/default.conf.template > /etc/nginx/sites-available/default' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '# PHP-FPM設定: ソケットディレクトリを作成' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'mkdir -p /var/run' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '# PHP-FPM設定ファイルを確認・修正（ソケットパスを設定）' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'if [ -f /usr/local/etc/php-fpm.d/www.conf ]; then' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    sed -i "s|listen = .*|listen = /var/run/php-fpm.sock|g" /usr/local/etc/php-fpm.d/www.conf || true' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    sed -i "s|listen.owner = .*|listen.owner = www-data|g" /usr/local/etc/php-fpm.d/www.conf || true' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    sed -i "s|listen.group = .*|listen.group = www-data|g" /usr/local/etc/php-fpm.d/www.conf || true' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '    sed -i "s|listen.mode = .*|listen.mode = 0660|g" /usr/local/etc/php-fpm.d/www.conf || true' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'fi' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '# PHP-FPMを直接起動（バックグラウンドで実行）' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '/usr/local/sbin/php-fpm -D || php-fpm -D || echo "PHP-FPM started"' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'sleep 2' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '' >> /usr/local/bin/railway-entrypoint.sh && \
    echo '# Nginxを起動（フォアグラウンドで実行）' >> /usr/local/bin/railway-entrypoint.sh && \
    echo 'exec nginx -g "daemon off;"' >> /usr/local/bin/railway-entrypoint.sh && \
    chmod +x /usr/local/bin/railway-entrypoint.sh

# ポートを公開（RailwayのPORT環境変数に対応）
EXPOSE 8000

# デフォルトコマンド
ENTRYPOINT ["/usr/local/bin/railway-entrypoint.sh"]
